@page "/"

<div class="d-flex align-items-center vh-100">
    <div class="col-md-4 offset-md-4">
        @if (MultiPlayer == null)
        {
            <h3>Single Player</h3>
            <a href="/game" class="btn btn-primary">Let Me At 'Em</a>

            <h3 class="pt-4">Multi Player</h3>
            <button type="button" class="btn btn-primary" @onclick="SelectMultiPlayer">Let's Hunt Sharks, Together</button>
        }
        else if (MultiPlayer == true)
        {
            if (Context.Player?.Name == null)
            {
                <label for="name">What's your name?</label>
                <EditForm Model="TempPlayer" OnValidSubmit="SetName" class="form-inline">
                    <DataAnnotationsValidator />
                    <ValidationSummary />
                    <div class="row">
                        <div class="form-group col-md-8">
                            <InputText id="name" class="form-control" type="text" placeholder="Name" @bind-Value="TempPlayer.Name" />
                            <ValidationMessage For="@(()=> TempPlayer.Name)" />
                        </div>
                        <div class="col-md-4">
                            <button type="submit" class="btn btn-primary">Mkay</button>
                        </div>
                    </div>
                </EditForm>
            }
            else
            {
                <GamesListComponent />
            }
        }
    </div>
</div>

