<div class="container">
    <div class="col-md-4 offset-md-4">
        <h3>Existing Games</h3>
        @if (Games == null)
        {
            <span>Loading...</span>
        }
        else
        {
            <ul>
                @foreach (var game in Games)
                {
                    <li>@game.Name (@game.Id)</li>
                }
            </ul>
        }

        <button class="btn btn-primary" type="button">New Game</button>
    </div>
</div>